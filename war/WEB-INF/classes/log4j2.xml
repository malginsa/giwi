<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<File name="file_debug" fileName="payments_debug.log">
			<PatternLayout pattern="%d [%t] %-5level %logger{36} - %msg%n" />
		</File>
		<File name="file_info" fileName="payments_info.log">
			<PatternLayout pattern="%d %-5level %logger{36} - %msg%n" />
		</File>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="trace">
			<AppenderRef ref="file_debug" level="TRACE" />
			<AppenderRef ref="file_info" level="INFO" />
			<AppenderRef ref="STDOUT" level="ERROR" />
		</Root>
	</Loggers>
</Configuration>
