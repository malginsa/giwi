<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c='urn:import:com.google.gwt.user.cellview.client'
  xmlns:s="urn:import:giwi.client"
>
	<ui:style>
		.scrollable {
			height: 300px;
			width: 200px;
			border: 1px solid #ccc;
			text-align: left;
		}
		.cardFormCell {
			padding-left: 20px;
		}
	</ui:style>

	<g:HTMLPanel>
		<table>
		
     <tr>
        <td
          valign='top'
          align='center'>
          <s:ShowMorePagerPanel
            addStyleNames='{style.scrollable}'
            ui:field='pagerPanel' />
        </td>
        <td
          class='{style.cardFormCell}'
          valign='top'
          align='center'>
          <s:CardInfoForm
            ui:field='cardForm' />
          <br />
          <g:Button
            ui:field='signOutButton'>
            <ui:msg
              key='signOutButton'>Sign Out</ui:msg>
          </g:Button>
        </td>
      </tr>
      
		</table>
	</g:HTMLPanel>
	

</ui:UiBinder>
